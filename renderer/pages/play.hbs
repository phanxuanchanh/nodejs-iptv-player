<div class="row mt-2 h-100" style="">
    <!-- Left Sidebar: Channel List -->
    <div class="col-md-3 channel-list p-3">
        <h5 class="text-center">Channel List</h5>
        <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search channels..."
            value="{{search}}">
        <ul class="list-group" style="height: 80%; overflow-y:scroll;">
            {{#each paginatedData.items}}
            <div class="card bg-dark channel-item" data-id="{{this.id}}">
                <div class="card-body text-white">
                    {{this.name}}
                </div>
            </div>
            {{/each}}
        </ul>
    </div>

    <!-- Right Content: Video Player -->
    <div class="col-md-9 d-flex justify-content-center align-items-left">
        <div class="video-player w-100">
            <video id="video" class="w-100 h-100" controls data-url="{{item.url}}" data-id="{{item.id}}">
                <source src="video.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
