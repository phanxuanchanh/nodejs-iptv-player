<div class="row mt-2 h-100" style="">
    <!-- Left Sidebar: Channel List -->
    <div class="col-md-3 channel-list">
        <h5 class="text-center">Channel List</h5>
        <input type="text" id="searchInput" class="form-control mb-3" placeholder="Search channels..."
            value="{{search}}">
        <ul class="list-group channel-items" style="height: 80%; overflow-y:scroll;">
            {{#each paginatedData.items}}
            <div class="card bg-dark channel-item" data-id="{{this.id}}">
                <div class="card-body text-white">
                    {{this.name}}
                </div>
            </div>
            {{/each}}
        </ul>
    </div>

    <div class="col-md-9" style="padding-left: 0px;">
        <!-- Video Info -->
        <div class="row">
            <div class="col-12">
                <div class="card bg-dark">
                    <div class="card-body d-flex align-items-center justify-content-between text-white">
                        <div>
                            <h5 class="card-title mb-0 mr-2">{{item.name}}</h5>
                            <p class="card-text mb-0 mr-2">{{item.group}}</p>
                        </div>
                        <div>
                            {{#ifCond item.favorited '===' 1}}
                            <button class="btn btn-sm me-2 p-2 text-danger btn-func" id="btn-remove-favorite" title="{{t 'remove-favorite-btn'}}">
                                <i class="fa fa-heart"></i>
                            </button>
                            {{else}}
                            <button class="btn btn-sm me-2 p-2 text-danger btn-func" id="btn-add-favorite" title="{{t 'add-favorite-btn'}}">
                                <i class="far fa-heart"></i>
                            </button>
                            {{/ifCond}}

                            {{!-- <button id="recordToggle" class="btn btn-sm me-2 p-2 px-5 text-success btn-func">
                                <i class="far fa-circle"></i>
                                <span id="timer" class="ms-2"></span>
                            </button> --}}
                            
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- Video Player -->
        <div class="row mt-2">
            <div class="col-12">
                <div class="video-player w-100">
                    <video id="video" class="w-100 h-100 video-js vjs-default-skin" autoplay controls
                        data-url="{{item.url}}" data-id="{{item.id}}">
                        <source src="#" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
            </div>
        </div>

    </div>
</div>