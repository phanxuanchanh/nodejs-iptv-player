<html>

<head>
    <title>IPTV Player</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        html {
            visibility: hidden;
        }
    </style>
</head>

<body class="bg-dark">
    <div class="card bg-dark my-5 mx-5">
        <div class="card-body">
            <h3 class="text-center text-white">Enter M3U link</h3>
            <div class="form-group">
                <label class="text-white">{{t 'm3u-name'}}</label>
                <input type="text" class="form-control" id="m3u8name" value="" placeholder="Example"/>
                <label class="mt-2 text-white">{{t 'm3u-link'}}</label>
                <input type="text" class="form-control" id="m3u8link" value="" placeholder="https://example.com/index.m3u"/>
            </div>
            <div class="form-group text-center mt-3">
                <button class="btn btn-success" id="btnM3u8Submit">Submit</button>
            </div>
        </div>
    </div>

    {{#ifCond playlists.length '!==' 0 }}
    <div class="card bg-dark mt-3 mb-5 mx-5">
        <div class="card-body">
            <h3 class="text-center text-white">Select list</h3>
            <ul>
                {{#each playlists}}
                <li class="text-white m3u-url-file" data-id="{{this.id}}">{{this.name}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
    {{/ifCond}}
</body>